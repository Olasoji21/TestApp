
<MudForm @ref="form" @bind-IsValid="@success" @bind-Errors="@errors">
    <MudDialog>
        <TitleContent>
            @if (Id == 0)
            {
                <MudText Typo="Typo.h6"><MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-3 mb-n1" />Add Category</MudText>
            }
            else
            {
                <MudText Typo="Typo.h6"><MudIcon Icon="@Icons.Material.Filled.Update" Class="mr-3 mb-n1" />Update Category</MudText>
            }
        </TitleContent>
        <DialogContent>
            <MudTextField T="string" For="@(() => Name)" @bind-Value="Name" Label="Category Name" RequiredError="Category Name is required!" />
        </DialogContent>
        <DialogActions>
            <MudButton Variant="Variant.Filled" OnClick="Cancel">Cancel</MudButton>
            @if (Id != 0)
            {
                <MudButton Variant="Variant.Filled" OnClick="SaveAsync" Disabled="@(!success)" Color="Color.Secondary">Update</MudButton>
            }
            else
            {
                <MudButton Variant="Variant.Filled" OnClick="SaveAsync" Disabled="@(!success)" Color="Color.Success">Save</MudButton>
            }
        </DialogActions>
    </MudDialog>
</MudForm>